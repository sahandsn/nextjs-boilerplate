{
  "overrides": [
    {
      "files": "src/**/*",
      "options": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "htmlWhitespaceSensitivity": "css",
        "insertPragma": false,
        "singleAttributePerLine": false,
        "bracketSameLine": false,
        "jsxSingleQuote": false,
        "printWidth": 80,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "requirePragma": false,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false,
        "embeddedLanguageFormatting": "auto",
        "vueIndentScriptAndStyle": false,
        "experimentalTernaries": false,
        "parser": "typescript"
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.yml",
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "semi": false,
        "parser": "css"
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss"]
}
